<div class="container">
  <div class="box">
    <% @letters.each do |letter| %>
    <h1 class="letter"><%= letter %></h1>
    <% end %>
  </div>

  <form action="/score" method="post">
    <input type="text" name="word" placeholder="What is the longest word you can find?">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
